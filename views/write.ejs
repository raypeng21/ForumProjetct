<!DOCTYPE html>
<html lang="en">

<head>

  <title>Write an article</title>
  <%- include head %>
</head>

<body>

  <%- include('bar', {username: username}) %>

  <div class="article">
    <form action="/article/add" method="post">
      <input type="hidden" name="id" value="<%- item.id %>">
      <input type="hidden" name="page" value="<%- item.page %>">
      <input type="text" name="title" placeholder="Title of this post" value="<%=item.title%>">
      <textarea name="content" class="xheditor"><%- item.content %></textarea>
      <% if (item.id) { %>
        <input type="submit" value="Edit">
      <%} else {%>
        <input type="submit" value="Submit">
      <%}%>
    </form>
  </div>

  <script type="text/javascript" src="/xheditor/jquery/jquery-1.4.4.min.js"></script>
  <script type="text/javascript" src="/xheditor/xheditor-1.2.2.min.js"></script>
  <script>
    $('.xheditor').xheditor({
      tools: 'full',
      skin: 'default',
      upImgUrl: '/article/upload',   //for upload file
      html5Upload: false,           //forbidden html5Upload
      upMultiple: 1                   //one file a time
    });
  </script>

</body>

</html>
